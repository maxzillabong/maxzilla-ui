{
  "name": "@maxzilla/ui",
  "version": "0.1.0",
  "description": "A modern web components library with Aceternity-inspired design, built on Lit Element",
  "type": "module",
  "keywords": ["web-components", "lit-element", "ui-library", "design-system", "aceternity"],
  "author": "Max Vananen <m.f.vananen@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxvfischer/maxzilla-ui.git"
  },
  "homepage": "https://ui.maxzilla.nl",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present", 
    "test": "npm run test --workspaces --if-present",
    "version": "npm version --workspaces",
    "publish-all": "npm run build && npm publish --workspaces",
    "lint": "npm run lint --workspaces --if-present",
    "storybook": "npm run storybook -w @maxzilla/ui-core",
    "build-storybook": "npm run build-storybook -w @maxzilla/ui-core",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish",
    "build:core": "npm run build -w maxzilla-ui-core",
    "build:react": "npm run build -w maxzilla-ui-react",
    "build:website": "npm run build -w @maxzilla/ui-website",
    "build:all": "npm run build:core && npm run build:react && npm run build:website",
    "dev:core": "npm run dev -w maxzilla-ui-core",
    "dev:react": "npm run dev -w maxzilla-ui-react",
    "dev:website": "npm run dev -w @maxzilla/ui-website",
    "dev:all": "concurrently -n core,react,site -c cyan,magenta,green \"npm:dev:core\" \"npm:dev:react\" \"npm:dev:website\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "@changesets/cli": "^2.27.7",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  }
}
