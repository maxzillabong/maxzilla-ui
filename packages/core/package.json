{
  "name": "@maxzilla/ui-core",
  "version": "0.1.0",
  "description": "Core web components library for Maxzilla UI built with Lit Element",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": {
      "import": "./dist/button.js",
      "types": "./dist/button.d.ts"
    },
    "./card": {
      "import": "./dist/card.js",
      "types": "./dist/card.d.ts"
    },
    "./input": {
      "import": "./dist/input.js", 
      "types": "./dist/input.d.ts"
    },
    "./badge": {
      "import": "./dist/badge.js",
      "types": "./dist/badge.d.ts"
    },
    "./avatar": {
      "import": "./dist/avatar.js",
      "types": "./dist/avatar.d.ts"
    },
    "./modal": {
      "import": "./dist/modal.js",
      "types": "./dist/modal.d.ts"
    },
    "./styles": {
      "import": "./dist/styles.js",
      "types": "./dist/styles.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "custom-elements.json"
  ],
  "scripts": {
    "build": "vite build && npm run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "dev": "vite build --watch",
    "analyze": "cem analyze --litelement",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "npm run build && node -e \"import('./dist/test-runner.js').then(m => m.mainRunner.runAll())\"",
    "test:integration": "npm run build && python3 -m http.server 8080 --directory . & open http://localhost:8080/test-runner.html",
    "test:watch": "npm run dev",
    "clean": "rm -rf dist storybook-static"
  },
  "keywords": [
    "web-components",
    "lit-element", 
    "ui-components",
    "design-system",
    "aceternity",
    "maxzilla-ui"
  ],
  "author": "Max Vananen <m.f.vananen@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/web-components": "^8.2.9",
    "@storybook/web-components-vite": "^8.2.9",
    "@types/node": "^20.14.15",
    "@web/dev-server-esbuild": "^0.4.0",
    "@web/test-runner": "^0.18.2",
    "@web/test-runner-playwright": "^0.11.0",
    "storybook": "^8.2.9",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  },
  "peerDependencies": {
    "@maxzilla/ui-tokens": "^0.1.0"
  },
  "customElements": "custom-elements.json"
}