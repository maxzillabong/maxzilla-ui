{
  "name": "maxzilla-ui-core",
  "version": "0.1.0",
  "description": "Core web components library for Maxzilla UI built with Lit Element",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": {
      "import": "./dist/components/button/index.js",
      "types": "./dist/components/button/index.d.ts"
    },
    "./card": {
      "import": "./dist/components/card/index.js",
      "types": "./dist/components/card/index.d.ts"
    },
    "./input": {
      "import": "./dist/components/input/index.js",
      "types": "./dist/components/input/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.js",
      "types": "./dist/styles/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "custom-elements.json"
  ],
  "scripts": {
    "build": "vite build && npm run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "dev": "vite build --watch",
    "analyze": "cem analyze --litelement",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "clean": "rm -rf dist storybook-static"
  },
  "keywords": [
    "web-components",
    "lit-element", 
    "ui-components",
    "design-system",
    "aceternity",
    "maxzilla-ui"
  ],
  "author": "Max Vananen <m.f.vananen@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/web-components": "^8.2.9",
    "@storybook/web-components-vite": "^8.2.9",
    "@types/node": "^20.14.15",
    "@web/test-runner": "^0.18.2",
    "@web/test-runner-playwright": "^0.11.0",
    "storybook": "^8.2.9",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  },
  "peerDependencies": {
    "@maxzilla/ui-tokens": "^0.1.0"
  },
  "customElements": "custom-elements.json"
}